{
  "name": "bozon",
  "version": "1.3.0",
  "description": "Command line tool for building, testing and publishing modern Electron applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/railsware/bozon.git"
  },
  "main": "lib/index.js",
  "scripts": {
    "dev": "npx webpack --watch",
    "build": "npx webpack --mode production",
    "lint": "npx eslint src",
    "test": "npx jest",
    "publish": "npm publish",
    "release": "yarn build && yarn publish"
  },
  "keywords": [
    "electron",
    "desktop",
    "application",
    "cli",
    "bozon"
  ],
  "author": "Railsware, Alex Chaplinsky",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "commander": "^8.3.0",
    "css-loader": "^6.5.1",
    "ejs": "^3.1.6",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "electron-notarize": "^1.1.1",
    "elliptic": "^6.5.4",
    "inquirer": "^8.2.0",
    "latest-version": "^5.1.0",
    "lodash": "^4.17.21",
    "merge-config": "^2.0.0",
    "nodemon": "^2.0.15",
    "style-loader": "^3.3.1",
    "underscore.string": "^3.3.5",
    "webpack": "^5.65.0",
    "webpack-inject-plugin": "^1.5.5",
    "webpack-merge": "^5.8.0"
  },
  "preferGlobal": true,
  "bin": {
    "bozon": "bin/bozon"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "resolutions": {
    "js-yaml": "^4.1.0",
    "yargs-parser": "^20.2.9",
    "lodash": "^4.17.21",
    "xmldom": ">=0.5.0"
  }
}
