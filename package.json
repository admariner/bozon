{
  "name": "bozon",
  "version": "1.0.6",
  "description": "Command line tool for building, testing and publishing modern Electron applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/railsware/bozon.git"
  },
  "main": "lib/index.js",
  "scripts": {
    "dev": "npx webpack --watch",
    "build": "npx webpack --mode production",
    "lint": "npx eslint src",
    "test": "npx jest",
    "publish": "npm publish",
    "release": "yarn build && yarn publish"
  },
  "keywords": [
    "electron",
    "desktop",
    "application",
    "cli",
    "bozon"
  ],
  "author": "Railsware, Alex Chaplinsky",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "commander": "^6.0.0",
    "css-loader": "^4.2.1",
    "ejs": "^3.1.3",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "inquirer": "^7.3.3",
    "latest-version": "^5.1.0",
    "merge-config": "^2.0.0",
    "nodemon": "^2.0.4",
    "style-loader": "^1.2.1",
    "underscore.string": "^3.3.5",
    "webpack": "^4.44.1",
    "webpack-inject-plugin": "^1.5.4",
    "webpack-merge": "^5.1.1"
  },
  "preferGlobal": true,
  "bin": {
    "bozon": "bin/bozon"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.6.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^9.0.1",
    "jest": "^26.3.0",
    "prettier": "^2.0.5",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.1"
  },
  "resolutions": {
    "js-yaml": "^3.14.0",
    "yargs-parser": "^18.1.3"
  }
}
